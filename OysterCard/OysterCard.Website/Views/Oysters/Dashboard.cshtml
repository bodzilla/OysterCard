@model IEnumerable<OysterCard.Core.DTO.OysterDTO>

@{
    ViewData["Title"] = "Dashboard";
}

<breadcrumb></breadcrumb>
<hr />
<h1>Dashboard</h1>
<br />
@if (@Model.Any())
{
    <h5 class="alert alert-info text-center" role="alert">You currently have @Model.Count() Oysters.</h5>
}
else
{
    <h5 class="alert alert-warning text-center" role="alert">You don't have any active Oysters.</h5>
}
<div class="card-deck">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Oyster services</h5>
            <p class="card-text">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a asp-area="" asp-controller="Oysters" asp-action="">Top up</a></li>
                    <li class="list-group-item"><a asp-area="" asp-controller="Oysters" asp-action="">Travel cards</a></li>
                    <li class="list-group-item"><a asp-area="" asp-controller="Oysters" asp-action="">Transfer ownership</a></li>
                </ul>
            </p>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <a asp-area="" asp-controller="Oysters" asp-action="Apply">
                <h5 class="card-title">Apply for an Oyster</h5>
            </a>
            <p class="card-text">By applying, you'll be able to top up, buy travel cards, track journeys and manage your Oyster.</p>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <a asp-area="" asp-controller="Oysters" asp-action="Applications">
                <h5 class="card-title">Oyster applications</h5>
            </a>
            <p class="card-text">View the status of, amend or cancel existing Oyster applications.</p>
        </div>
    </div>
</div>