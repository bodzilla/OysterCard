@page
@model SigninModel

@{
    ViewData["Title"] = "Sign in";
}

<div align="center">
    <h1>@ViewData["Title"]</h1>
    <br />
    <div class="card shadow-sm" align="justify" style="max-width: 375px">
        <div class="card-img-trim" style="background-color: #2fa0f0"></div>
        <div class="card-body">
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserSigninVm.Email"></label>
                    <input asp-for="UserSigninVm.Email" class="form-control" />
                    <span asp-validation-for="UserSigninVm.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserSigninVm.Password"></label>
                    <input asp-for="UserSigninVm.Password" class="form-control" />
                    <span asp-validation-for="UserSigninVm.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </form>
        </div>
    </div>
    <p class="pt-3">
        <a asp-page="./Signup" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
