@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div align="center" style="margin-top: 50px">
    <div class="card" style="width: 40%;min-width: 300px;" align="justify">
        <div class="card-header">Login</div>
        <div class="card-body">
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="UserLoginVm.Email" class="form-control" />
                    <span asp-validation-for="UserLoginVm.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="UserLoginVm.Password" class="form-control" />
                    <span asp-validation-for="UserLoginVm.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="UserLoginVm.RememberMe">
                            <input asp-for="UserLoginVm.RememberMe" />
                            @Html.DisplayNameFor(m => m.UserLoginVm.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
